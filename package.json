{
  "name": "ghci-debugger",
  "displayName": "Bare GHCi Debugger",
  "description": "Pure TypeScript adapter to GHCi debugger",
  "version": "0.4.0",
  "publisher": "Edka",
  "repository": {
    "url": "https://github.com/EduardSergeev/vscode-ghci-debugger"
  },
  "engines": {
    "vscode": "^1.43.0"
  },
  "categories": [
    "Debuggers"
  ],
  "keywords": [
    "Haskell"
  ],
  "license": "MIT",
  "galleryBanner": {
    "theme": "dark",
    "color": "#444"
  },
  "main": "./out/extension",
  "activationEvents": [
    "onDebug"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "GHCi Debugger configuration settings",
      "properties": {
        "ghci-debugger.historySize": {
          "type": "integer",
          "default": 50,
          "scope": "application",
          "markdownDescription": "The depth of the evaluation history tracked by GHCi. Determines the maximum depth of stack trace displayed.  \nUsed to set [-fghci-hist-size](https://downloads.haskell.org/~ghc/latest/docs/html/users_guide/ghci.html#ghc-flag--fghci-hist-size=%E2%9F%A8n%E2%9F%A9) flag. "
        }
      }
    },
    "breakpoints": [
      {
        "language": "haskell"
      }
    ],
    "debuggers": [
      {
        "type": "ghci",
        "label": "GHCi Debugger",
        "program": "./out/src/debugger",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [],
            "properties": {
              "project": {
                "type": "string",
                "description": "Project's type to debug. Supported: `cabal`, `cabal-new`, `cabal-v2`, `stack`, `bare-stack`, `bare`",
                "default": null
              },
              "targets": {
                "type": "string",
                "description": "Project's target(s) to debug",
                "default": null
              },
              "module": {
                "type": "string",
                "description": "Target's module to debug",
                "default": null
              },
              "expression": {
                "type": "string",
                "description": "Haskell expression to debug",
                "defaul": null
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": false
              }
            }
          }
        }
      }
    ],
    "languages": [
      {
        "id": "ghci-log",
        "firstLine": "^â€ŒStarting GHCi with.*"
      }
    ],
    "grammars": [
      {
        "language": "ghci-log",
        "scopeName": "code.ghci-log",
        "path": "./ghci-log.tmLanguage"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "dependencies": {
    "vscode-debugadapter": "1.40.0"
  },
  "devDependencies": {
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.9.8",
    "tslint": "^6.1.0",
    "typescript": "^3.8.3",
    "vscode": "^1.1.36"
  }
}
