{
  "name": "ghci-debugger",
  "displayName": "Bare GHCi Debugger",
  "description": "Pure TypeScript adapter to GHCi debugger",
  "version": "0.3.0",
  "publisher": "Edka",
  "repository": {
    "url": "https://github.com/EduardSergeev/vscode-ghci-debugger"
  },
  "engines": {
    "vscode": "^1.43.0"
  },
  "categories": [
    "Debuggers"
  ],
  "keywords": [
    "Haskell"
  ],
  "license": "MIT",
  "galleryBanner": {
    "theme": "dark",
    "color": "#444"
  },
  "main": "./out/extension",
  "activationEvents": [
    "onDebug"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "GHCi Debugger configuration settings",
      "properties": {
        "ghci-debugger.feature.debugger": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Enable debugger feature"
        },
        "ghci-debugger.replCommand": {
          "type": "string",
          "default": "",
          "scope": "resource",
          "markdownDescription": "The command used to start GHCi. `$stack_ide_targets` will be replaced by the output of `stack ide targets`. Leave blank for auto detection. When set, overrides the deprecated `ghci-debugger.workspaceType`. If you set this, please also set `ghci-debugger.replScope` to an appropriate value."
        },
        "ghci-debugger.replScope": {
          "type": "string",
          "enum": [
            "workspace",
            "file"
          ],
          "default": "workspace",
          "markdownDescription": "Whether GHCi should be started for a project or individual files. **Note**: This option has no effect when `ghci-debugger.replCommand` is set to empty string for auto detection."
        },
        "ghci-debugger.startupCommands.all": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "System.IO.hSetBuffering System.IO.stderr System.IO.NoBuffering",
            "System.IO.hSetBuffering System.IO.stdout System.IO.NoBuffering",
            ":set -fdefer-type-errors -fdefer-typed-holes -fdefer-out-of-scope-variables",
            ":set -fno-hide-source-paths",
            ":set -Wno-error=missing-home-modules"
          ],
          "scope": "resource",
          "markdownDescription": "GHCi commands on startup to use for all workspace types. The default value is for use within vscode-ghc-simple and you can customize these if needed. Since these might be updated in the future, Custom commands should go to `ghci-debugger.startupCommands.custom`"
        },
        "ghci-debugger.startupCommands.bare": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            ":set -Wno-type-defaults"
          ],
          "scope": "resource",
          "markdownDescription": "GHCi commands on startup to use for 'bare' workspace types. The default value is for use within vscode-ghc-simple and you can customize these if needed. Since these might be updated in the future, Custom commands should go to `ghci-debugger.startupCommands.custom`"
        },
        "ghci-debugger.startupCommands.custom": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "scope": "resource",
          "markdownDescription": "Custom GHCi commands on startup"
        },
        "ghci-debugger.workspaceType": {
          "type": "string",
          "default": "detect",
          "markdownDescription": "*This option is deprecated.* See `ghcSimple.replCommand` and `ghcSimple.replScope`.",
          "scope": "resource",
          "enum": [
            "detect",
            "stack",
            "cabal",
            "cabal new",
            "cabal v2",
            "bare-stack",
            "bare"
          ]
        }
      }
    },
    "breakpoints": [
      {
        "language": "haskell"
      }
    ],
    "debuggers": [
      {
        "type": "ghci",
        "label": "GHCi Debugger",
        "program": "./out/src/debugger",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [
              "module",
              "function"
            ],
            "properties": {
              "target": {
                "type": "string",
                "description": "Project's target to debug",
                "default": null
              },
              "module": {
                "type": "string",
                "description": "Target's module to debug",
                "default": "Main"
              },
              "function": {
                "type": "string",
                "description": "Module's function to debug",
                "default": "main"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": true
              },
              "trace": {
                "type": "boolean",
                "description": "Enable logging of the Debug Adapter Protocol.",
                "default": true
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "ghci",
            "request": "launch",
            "name": "Main.main",
            "module": "Main",
            "function": "main",
            "stopOnEntry": false
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "dependencies": {
    "await-notify": "1.0.1",
    "vscode-debugadapter": "1.40.0"
  },
  "devDependencies": {
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.9.8",
    "tslint": "^6.1.0",
    "typescript": "^3.8.3",
    "vscode": "^1.1.36"
  }
}
